{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "linebreak-style": 0,
    "arrow-parens": [
      "error",
      "always"
    ],
    "no-restricted-syntax": 0,
    "import/extensions": [
      "error",
      "always",
      {
        "ignorePackages": true
      }
    ],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ]
  }
}
